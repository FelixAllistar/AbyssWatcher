{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "AbyssWatcher",
  "version": "0.1.0",
  "identifier": "com.abysswatcher.app",
  "build": {
    "frontendDist": "ui/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run ui:dev",
    "beforeBuildCommand": "npm run ui:build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AbyssWatcher",
        "width": 420,
        "height": 260,
        "resizable": true,
        "alwaysOnTop": true,
        "transparent": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}