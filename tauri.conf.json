{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "AbyssWatcher",
  "version": "0.1.9",
  "identifier": "com.abysswatcher.app",
  "build": {
    "frontendDist": "dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AbyssWatcher",
        "width": 420,
        "height": 260,
        "resizable": true,
        "alwaysOnTop": true,
        "transparent": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data:; media-src 'self' asset:"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "resources": {
      "ui/public/sounds/*": "sounds/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU4MzdFRDBFNUUyRUEzNzkKUldSNW95NWVEdTAzNkcwOWprcTdKTmU2RDd4QTh1TFFTd0tEMkkxYmR2TEIvVDRLRGs4OGh2ZjcK",
      "endpoints": [
        "https://github.com/FelixAllistar/AbyssWatcher/releases/latest/download/latest.json"
      ]
    }
  }
}